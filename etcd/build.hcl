metadata {
  name = "etcd"
}

scaffold "terraform" {
  path = "terraform"
  type = "terraform"
}

scaffold "crds" {
  path = "crds"
  type = "crd"
}

scaffold "helm" {
  path = "helm/etcd"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "helm"

    args = [
      "dependency",
      "update",
    ]

    sha     = "47e5bfc303fd48e0c0de3a98a24703809c86742ccfb65da59b9eb426cedc0803"
    retries = 0
  }
}
